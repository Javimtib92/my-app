{
    "extends": ["airbnb", "prettier", "prettier/react"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["prettier", "react", "react-hooks"],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "ignorePatterns": ["node_modules/"],
    "rules": {
        "react/react-in-jsx-scope": "off"
    },
    "overrides": [
        {
          "files": ["*.jsx", "*.js"]
        }
    ]
}